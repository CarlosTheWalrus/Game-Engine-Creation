#include <iostream>
using namespace std;

int main()
{
    int totalPacks{ 40 };
    int students{ 14 };
    int remainder{};
    int studentShare{};

    studentShare = totalPacks / students;
    cout << "Each student will get " << studentShare << " Haribos" << endl;



   remainder = totalPacks % students;
   cout << "The teacher will have " << remainder << " Haribos left." << endl;

  

}
